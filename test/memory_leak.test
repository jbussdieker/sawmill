#!/bin/bash
(
	for (( ; ; )); do
	  echo "\"asdfqwer\""
	done
) | ./src/sawmill > /dev/null &

PID=`ps -edf | grep "src/sawmill -f findthisproc" | grep -v grep | awk '{print $2}'`
START_RSS=`ps -y -l -p $PID | tail -n 1 | awk '{print $8}'`

for i in {1..5}; do
  # Still running?
  # TODO: This doesn't detect duplicate processes
  ps -edf | grep "$PID " | grep -v grep &> /dev/null
  if [[ "$?" != "0" ]]; then
    echo "ERROR: Process died"
    break
  fi

  # Print RSS and sleep
  RSS=`ps -y -l -p $PID | tail -n 1 | awk '{print $8}'`
  echo "PASS $i: $RSS KB"

  sleep 1
done

kill -9 $PID

if [[ "x$START_RSS" != "x$RSS" ]]; then
  echo "Memory Leak Detected!"
  exit 1
fi

exit 0
